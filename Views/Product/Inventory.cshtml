@using Northwind.Models
@model IEnumerable<Product>
<script src="https://kit.fontawesome.com/84c5b245a1.js" crossorigin="anonymous"></script>

<div id="User" style="display:none;" data-email="@User.Identity.Name"
    data-customer='@User.IsInRole("Northwind-Employee")'></div>
<table class="table table-hover">
    <div class="form-group col-md-8 mb-0">
        <select class="form-control form-control-sm" id="typeform">
            <option value=0 selected> Default</option>
            <option value=1> Low Inventory </option>
            <option value=2> Discontinued</option>

        </select>
    </div>
    <div class="form-group col-md-4 mb-0">
        <div class="form-check text-right">
            <input class="form-check-input" type="checkbox" id="Discontinued">
            <label class="form-check-label" for="Discontinued">Discontinued</label>
        </div>
    </div>
    <thead>
        <tr id="thead">
            <th class="thead-clickable" data-sort="name" scope="col">Name <i id="name-icon" class=""></i> </th>
            <th class="thead-clickable" data-sort="quantity" scope="col">Quantity <i id="quantity-icon" class=""></i></th>
            <th class="thead-clickable" data-sort="order" scope="col">On Order <i id="order-icon" class=""></i></th>
            <th class="thead-clickable" data-sort="stock" scope="col">In Stock <i id="stock-icon" class=""></i></th>
            <th class="thead-clickable" data-sort="ratio" scope="col">Reorder Ratio <i id="ratio-icon" class=""></i></th>
        </tr>
    </thead>
    <tbody id="inventory_rows"></tbody>
</table>
<!-- edit modal -->
<div id="editModal" class="modal fade" tabindex="-1" role="dialog">
    <div style="display:none;" id="ProductId"></div>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Inventory</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col col-xs-2"><strong>Units on order</strong></div>
                    <div class="col col xs-2 text-right" id="unitsOnOrder"><strong></div>
                </div>
                <div class="row">
                    <div class="col col-xs-2"><strong>Units in stock</strong></div>
                    <div class="col col xs-2 text-right" id="unitsInStock"><strong></div>
                </div>
                <div class="row">
                    <div class="col col-xs-5 pt-2" id="ProductName">Cool Product</div>
                    <div class="col col-xs-2">
                        <input type="number" min="1" value="1" id="onOrderQuantity" class="form-control" />
                        <div class="col col xs-2 text-right">Units to order</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="editOrderButton">Continue</button>
            </div>
        </div>
    </div>
</div>
<!-- toast -->
<!-- Flexbox container for aligning the toasts -->
<div id="cart_toast" class="toast bg-info text-light" role="alert" aria-live="assertive" aria-atomic="true"
    style="position: fixed;top: 65px;right: 10px;">
    <div class="toast-header">
        <strong id="toast_header">This is a toast header</strong>
    </div>
    <div class="toast-body" id="toast_body">
        This is a toast message.
    </div>
</div>
@section scripts
{
<script src="../../js/inventory.js"></script>

}